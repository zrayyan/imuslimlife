font-weight: 600;
line-height: 1.3;
}

a {
text-decoration: none;
color: inherit;
transition: all 0.3s ease;
}

ul {
list-style: none;
}

img {
max-width: 100%;
height: auto;
}

.section-title {
font-size: 36px;
text-align: center;
margin-bottom: 50px;
position: relative;
color: var(--dark-color);
}

.section-title::after {
content: '';
